{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strict": false,
        "moduleResolution": "node",
        "lib": ["dom", "dom.iterable", "esnext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ],
    "@typescript-eslint/no-explicit-any": "warn"
}